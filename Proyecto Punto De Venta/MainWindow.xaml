        <Rectangle HorizontalAlignment="Left" Height="52" Margin="937,10,0,0"  VerticalAlignment="Top" Width="153" Fill="#bababa"/>
        <Label Content="00/00/00" FontSize="25" HorizontalAlignment="Left" Margin="959,16,0,0" VerticalAlignment="Top" Height="40" Width="124"/>
        <Rectangle HorizontalAlignment="Left" Height="52" Margin="1104,10,0,0"  VerticalAlignment="Top" Width="153" Fill="#bababa"/>
