        <Button Content="Productos" FontSize="20" FontFamily="Times New Roman" HorizontalAlignment="Left" Height="36" Margin="1083,244,0,0" VerticalAlignment="Top" Width="148" Click="Button_Click"/>

    </Grid>
</Window>
