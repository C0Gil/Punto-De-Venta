        <Label Content="Username" FontSize="30" FontFamily="Times New Roman" HorizontalAlignment="Left" Margin="168,32,0,0" VerticalAlignment="Top" Height="49" Width="206"/>
        <Label Content="Rol" FontSize="30" FontFamily="Times New Roman" HorizontalAlignment="Left" Margin="10,32,0,0" VerticalAlignment="Top" Height="49" Width="153"/>
